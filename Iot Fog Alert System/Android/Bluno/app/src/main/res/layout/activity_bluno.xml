<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    tools:context=".BLUNOActivity">

    <RelativeLayout
        android:id="@+id/TopLayout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="0dp">

        <ImageView
            android:id="@+id/title_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_scanning" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/CenterLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/TopLayout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ModeMenuLayout"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ButtonArea"
                android:layout_width="320dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:id="@+id/analoglayout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/potbutton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/pot_unseleted" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/ModeDispArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ButtonArea"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/pot_input_Area"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_gravity="center"
                    android:layout_marginRight="8px"
                    android:src="@drawable/potmeter"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/analogTextDisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:bufferType="editable"
                    android:text="680"
                    android:textColor="#ffffff"
                    android:textSize="12dip"
                    android:visibility="invisible" />


            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/CenterLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/buzzerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relaylayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="43dp"
            android:layout_marginRight="30dp">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/templayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="44dp"
            android:layout_marginRight="108dp">

            <TextView
                android:id="@+id/tempdisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:bufferType="editable"
                android:text="20â„ƒ"
                android:textColor="#1bdab1"
                android:textSize="20dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/humiditylayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="136dp"
            android:layout_marginRight="106dp">

            <TextView
                android:id="@+id/humiditydisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:bufferType="editable"
                android:text="20 %"
                android:textColor="#1bdab1"
                android:textSize="20dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="146dp"
            android:layout_marginRight="37dp"></RelativeLayout>

        <TextView
            android:id="@+id/textViewPot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="213dp"
            android:text="potentionmeter"
            android:textColor="#1bdab1"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/textViewPot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="221dp"
            android:layout_marginTop="166dp"
            android:layout_marginBottom="187dp"
            android:text="potentionmeter"
            android:textColor="#1bdab1"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="48dp"
            android:text="temperature"
            android:textColor="#1bdab1"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewPot2"
            android:layout_alignTop="@+id/textView"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="88dp"
            android:text="humidity"
            android:textColor="#1bdab1"
            android:textSize="16dip" />


    </RelativeLayout>

</RelativeLayout>
